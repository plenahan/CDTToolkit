<div class="form-row">
    <div class="form-item">
        <label>Name*</label>
        <input type="text" name="name" value="<%= object.name %>">
    </div>
    <div class="form-item">
        <label>Description</label>
        <textarea name="description"><%= object.description %></textarea>
    </div>
    <div class="form-item form-item-no-grow">
        <label>Cover</label>
        <input type="file" name="cover" class="image-cover filepond">
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label>Feel:</label>
        <textarea rows="5" name="feel"><%= object.feel %></textarea>
    </div>
    <div class="form-item">
        <label>See:</label>
        <textarea rows="5" name="see"><%= object.see %></textarea>
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label>Do:</label>
        <textarea rows="5" name="do"><%= object.do %></textarea>
    </div>
    <div class="form-item">
        <label>Hear:</label>
        <textarea rows="5" name="hear"><%= object.hear %></textarea>
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label>Pain:</label>
        <textarea rows="5" name="pain"><%= object.pain %></textarea>
    </div>
    <div class="form-item">
        <label>Gain:</label>
        <textarea rows="5" name="gain"><%= object.gain %></textarea>
    </div>
</div>

