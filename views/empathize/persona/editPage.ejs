<div>
    <h1>Edit <%= tool.title %></h1>
    <p class="lead"><%= tool.description %></p>
    <form action="/<%= tool.link %>/<%= object.id %>?_method=PUT" method="POST">
        <div class="form-row">
            <div class="form-item">
                <label>Name*</label>
                <input type="text" name="name" value="<%= object.name %>">
            </div>
            <div class="form-item">
                <label>Description</label>
                <textarea name="description"><%= object.description %></textarea>
            </div>
            <div class="form-item form-item-no-grow">
                <label>Cover</label>
                <input type="file" name="cover" class="image-cover filepond">
            </div>
        </div>
        <% if(object.type == "basic"){ %>
            <div id="basicForm">
                <div class="form-row">
                    <div class="form-item">
                        <label>Who they want to be:</label>
                        <textarea rows="5" name="who"><%= object.who %></textarea>
                    </div>
                    <div class="form-item">
                        <label>What they want to do:</label>
                        <textarea rows="5" name="what"><%= object.what %></textarea>
                    </div>
                    <div class="form-item">
                        <label>How they want to feel:</label>
                        <textarea rows="5" name="how"><%= object.how %></textarea>
                    </div>
                </div>
            </div>
        <% } %>
